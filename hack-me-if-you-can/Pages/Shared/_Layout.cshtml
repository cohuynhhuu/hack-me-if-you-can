<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Security Workshop Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-shield-lock-fill"></i> Security Workshop
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Dashboard</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Security Steps
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Step1"><i class="bi bi-1-circle"></i> SQL Injection</a></li>
                            <li><a class="dropdown-item" href="/Step2"><i class="bi bi-2-circle"></i> XSS Protection</a></li>
                            <li><a class="dropdown-item" href="/Step3"><i class="bi bi-3-circle"></i> CSRF Protection</a></li>
                            <li><a class="dropdown-item" href="/Step4"><i class="bi bi-4-circle"></i> Auth & Authorization</a></li>
                            <li><a class="dropdown-item" href="/Step5"><i class="bi bi-5-circle"></i> Secrets Management</a></li>
                            <li><a class="dropdown-item" href="/Step6"><i class="bi bi-6-circle"></i> Rate Limiting</a></li>
                            <li><a class="dropdown-item" href="/Step7"><i class="bi bi-7-circle"></i> Input Validation</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-primary" href="/Step8"><i class="bi bi-8-circle-fill"></i> Security Logs Viewer</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container text-center py-3">
            &copy; 2026 - Hack Me If You Can! - BTEC
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
